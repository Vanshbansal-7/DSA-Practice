class Solution {
    public int romanToInt(String s) {
        int total = 0;
        int prev = 0;

        for (int i = s.length() - 1; i >= 0; i--) {
            int value = 0;
            switch (s.charAt(i)) {
                case 'I': value = 1; break;
                case 'V': value = 5; break;
                case 'X': value = 10; break;
                case 'L': value = 50; break;
                case 'C': value = 100; break;
                case 'D': value = 500; break;
                case 'M': value = 1000; break;
            }
            if (value < prev) {   //As "IV" is 4 not I+V=1+5=6 so if previous value is greater while iterate reversly then do minus V-I=5-1=4 otherwise simple addition.
                total -= value;
            } else {
                total += value;
            }
            prev = value;
        }
        return total;
    }
}

